<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".todoscreen"
    android:gravity="center"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a Task"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/titleEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Task Name"
        android:textColor="#570420"
        android:layout_marginVertical="10dp"
        tools:ignore="Autofill,HardcodedText,LabelFor,TextFields"/>

    <EditText
        android:id="@+id/descriptionEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Description"
        android:textColor="#076C63"
        android:layout_marginVertical="10dp"
        tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />

    <EditText
        android:id="@+id/dateEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Finishing Date"
        android:inputType="date"
        android:textColor="#9F4326"
        android:layout_marginVertical="10dp"
        tools:ignore="Autofill,HardcodedText" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ADD"
        android:backgroundTint="#903F51B5"
        android:layout_marginVertical="10dp"
        tools:ignore="HardcodedText" />

</LinearLayout>